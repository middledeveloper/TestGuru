<%= form_with model: @message,
              url: email_messages_create_path,
              local: true do |form| %>
  <div>
    <%= form.label :email, class: 'mr-2' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :name, class: 'mr-2' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :text, class: 'mr-2' %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>
  <div class="text-right">
    <%= form.submit 'submit', class: 'btn btn-primary btn-sm mt-5 mb-5' %>
  </div>
<% end %>
