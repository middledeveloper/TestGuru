<h1><%= t('.header', title: @test_passage.test.title) %></h1>

<% if @test_passage.passed? %>
  <h2 style="color: green">
    <%= t('.success_result', percentage: @test_passage.result_percent) %>
  </h2>
<% else %>
  <h2 style="color: red">
    <%= t('.fail_result', percentage: @test_passage.result_percent) %>
  </h2>
<% end %>

<%= link_to t('.back'), tests_path %>
