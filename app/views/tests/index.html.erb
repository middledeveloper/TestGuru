<% if flash[:info] %>
  <%= flash_message(:info) %>
<% end %>

<div class="mt-3">
  <h1><%= t('.header') %></h1>

  <table class="table sort-by-title">
    <thead class="thead-light">
      <tr>
        <th class="col sort-column pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th class="col"><%= t('.level') %></th>
        <th class="col"><%= t('.questions') %></th>
        <th class="col"><%= t('.timer') %></th>
        <th class="col"></th>
      </tr>
    </thead>
    <%= render @tests %>
  </table>
</div>
